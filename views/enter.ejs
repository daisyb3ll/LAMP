<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>LAMP - Explore</title>
    <link rel="icon" type="image/png" href="/images/transperent-lamp-cd.png" sizes="32x32" />
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lexend+Deca&family=Coral+Pixels&display=swap');

        body {
            margin: 0;
            font-family: 'Lexend Deca', sans-serif;
            display: flex;
            background: #fff;
        }

        .sidebar {
            width: 180px;
            background-color: #f4f4f4;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            border-right: 1px solid #ccc;
        }

        .logo img {
            width: 100px;
            margin-bottom: 20px;
        }

        .nav a {
            display: block;
            font-family: 'Coral Pixels', monospace;
            font-size: 16px;
            font-weight: bold;
            color: black;
            text-decoration: none;
            margin: 10px 0;
        }

        .content-wrapper {
            margin-left: 180px;
            padding: 40px;
            flex: 1;
            overflow-y: auto;
        }

        h1 {
            font-family: 'Coral Pixels', monospace;
            text-align: center;
            margin-bottom: 30px;
        }

        .album-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 30px;
            justify-items: center;
        }

        .album-card {
            text-align: center;
        }

        .album-card img {
            width: 100%;
            max-width: 180px;
            border-radius: 8px;
            aspect-ratio: 1 / 1;
            object-fit: cover;
        }

        .album-title {
            font-family: 'Coral Pixels', monospace;
            font-size: 14px;
            margin-top: 10px;
        }

        /* Modal styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: white;
            padding: 40px;
            border-radius: 12px;
            display: flex;
            gap: 40px;
            max-width: 800px;
            width: 90%;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
            position: relative;
        }

        .album-box {
            text-align: center;
            max-width: 300px;
        }

        .album-box img {
            width: 100%;
            border-radius: 12px;
            object-fit: cover;
        }

        .album-box h2 {
            font-family: 'Coral Pixels', monospace;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .album-info {
            font-size: 14px;
            margin-top: 10px;
        }

        .generate-btn {
            margin-top: 20px;
            background: black;
            color: white;
            padding: 8px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <img src="/images/transperent-lamp-cd.png" alt="lamp logo" />
        </div>
        <div class="nav">
            <a href="/home">home</a>
            <a href="/explore">explore</a>
            <a href="#">library</a>
            <a href="#">about</a>
        </div>
    </div>

    <!-- Explore content -->
    <div class="content-wrapper">
        <h1>Explore Albums</h1>
        <div class="album-grid">
            <% albums.forEach(album=> { %>
                <div class="album-card">
                    <a href="/album/<%= album.id %>">
                        <img src="<%= album.images[0]?.url || '/images/default-album.png' %>" alt="<%= album.name %>" />
                        <div class="album-title">
                            <%= album.name %>
                        </div>
                    </a>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Modal overlay -->
    <div id="albumModal" class="modal-overlay">
        <div class="modal-content">
            <!-- Album of the Day -->
            <div class="album-box">
                <h2>Album of the Day</h2>
                <img src="<%= album.images[0]?.url || '/images/default-album.png' %>" />
                <div class="album-info">
                    <strong>
                        <%= album.name %>
                    </strong><br />
                    by <%= album.artists[0].name %><br />
                        <small>Released on <%= album.release_date %></small>
                </div>
            </div>

            <!-- Random Album -->
            <div class="album-box">
                <h2>Random Album</h2>
                <img src="<%= randomAlbum.images[0]?.url || '/images/default-album.png' %>" />
                <div class="album-info">
                    <strong>
                        <%= randomAlbum.name %>
                    </strong><br />
                    by <%= randomAlbum.artists[0].name %><br />
                        <small>Released on <%= randomAlbum.release_date %></small>
                </div>

                <form action="/enter" method="GET">
                    <button class="generate-btn">generate new random album</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Close modal when clicking outside content
        const modal = document.getElementById("albumModal");

        modal.addEventListener("click", (e) => {
            if (e.target === modal) {
                modal.style.display = "none";
            }
        });

        // Show modal on page load (optional)
        window.addEventListener("load", () => {
            modal.style.display = "flex";
        });
    </script>
</body>

</html>