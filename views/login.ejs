<body>    
<div class="album-scroller-container">
    <div class="album-scroller" id="albumScroller">
        <% for (let i=0; i < 2; i++) { %> <!-- Duplicate grid twice for seamless looping -->
            <% albums.forEach(function(album) { %>
                <div class="album-grid-tile">
                    <img src="<%= album.images[0]?.url || '/images/default-album.png' %>" alt="Album Cover" />
                </div>
                <% }); %>
                    <% } %>
    </div>
</div>

    <!-- ðŸ”§ LOGIN FORM - ensure this is here -->
    <div class="signin-content">
        <div class="login-box">
            <h2>Welcome Back</h2>
            <form action="/users/login" method="POST">
                <input type="text" name="username" placeholder="Username" required />
                <input type="password" name="password" placeholder="Password" required />
                <button type="submit">Sign In</button>

                <% if (error) { %>
                    <div class="error">
                        <%= error %>
                    </div>
                    <% } %>
            </form>
        </div>
    </div>
</body>
