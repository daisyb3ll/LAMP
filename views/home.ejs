<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>LAMP - Home</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        display: flex;
        height: 100vh;
      }

      .sidebar {
        width: 200px;
        background: #f5f5f5;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-right: 2px solid #ccc;
      }

      .logo {
        border: 1px solid #000;
        padding: 10px;
        margin-bottom: 30px;
        text-align: center;
      }

      .nav {
        display: flex;
        flex-direction: column;
        gap: 15px;
        text-align: left;
        width: 100%;
      }

      .nav a {
        text-decoration: none;
        color: black;
        font-weight: bold;
      }

      .nav a:hover {
        text-decoration: underline;
      }

      .content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: start;
        padding: 40px;
      }

      .albums-container {
        display: flex;
        flex-direction: row;
        gap: 60px;
      }

      .album-section {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .album-box {
        width: 300px;
        height: 450px;
        border: 2px dashed #888;
        border-radius: 10px;
        padding: 30px 20px 20px 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .album-box h2 {
        margin-bottom: 20px;
      }

      .album-content {
        flex: 1; /* Makes the album-content stretch */
        display: flex;
        flex-direction: column;
        justify-content: center; /* ⬅️ CENTER album image and info vertically */
        align-items: center;
        width: 100%;
        gap: 10px;
      }

      .album-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        transition: filter 0.3s;
      }

      .album-img:hover {
        filter: brightness(0.85);
      }

      .album-info {
        text-align: center;
      }

      .generate-btn {
        margin-top: 10px;
        padding: 8px 20px;
        border: 2px dashed #555;
        background: transparent;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      .generate-btn:hover {
        background-color: #ddd;
      }
    </style>
  </head>

  <body>
    <div class="sidebar">
      <div class="logo">lamp logo here</div>
      <div class="nav">
        <a href="/home">home</a>
        <a href="#">explore</a>
        <a href="#">library</a>
        <a href="#">threads</a>
      </div>
    </div>

    <div class="content">
      <div class="albums-container">
        <!-- Album of the Day -->
        <div class="album-box">
          <h2>Album of the Day</h2>
          <div class="album-content">
            <a href="/album/<%= album.id %>">
              <img
                src="<%= album.images[0] ? album.images[0].url : '' %>"
                alt="Album Cover"
                class="album-img"
              />
            </a>
            <div class="album-info">
              <strong><%= album.name %></strong><br />
              by <%= album.artists[0].name %><br />
              <small>Released on <%= album.release_date %></small>
            </div>
          </div>
        </div>

        <!-- Random Album Section (box + generate button) -->
        <div class="album-section">
          <div class="album-box">
            <h2>Random Album</h2>
            <div class="album-content">
              <a href="/album/<%= randomAlbum.id %>">
                <img
                  src="<%= randomAlbum.images[0] ? randomAlbum.images[0].url : '' %>"
                  alt="Album Cover"
                  class="album-img"
                />
              </a>
              <div class="album-info">
                <strong><%= randomAlbum.name %></strong><br />
                by <%= randomAlbum.artists[0].name %><br />
                <small>Released on <%= randomAlbum.release_date %></small>
              </div>
            </div>
          </div>

          <!-- ✅ Generate button neatly under random album -->
          <form action="/home" method="GET">
            <button type="submit" class="generate-btn">
              generate new random album
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
