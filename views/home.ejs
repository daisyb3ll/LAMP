<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>LAMP - Home</title>
  <link rel="icon" type="image/png" href="/images/transperent-lamp-cd.png" sizes="32x32" />
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
  @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&family=Bungee+Tint&family=Chokokutai&family=Comfortaa:wght@300..700&family=Coral+Pixels&family=Darumadrop+One&family=Dongle&family=Doto:wght@100..900&family=Gaegu&family=IM+Fell+Double+Pica:ital@0;1&family=Jersey+15&family=Kirang+Haerang&family=Lacquer&family=Lexend+Deca:wght@100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik+Dirt&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&family=Special+Elite&family=Syne+Mono&family=Tiny5&display=swap');
  @import url("https://use.typekit.net/ldr5vzi.css");
  </style>
</head>

<body class="home-page">
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <img src="/images/transperent-lamp-cd.png" alt="lamp logo" />
    </div>
    <div class="nav">
      <a href="/home">home</a>
      <a href="/explore">explore</a>
      <a href="/enter">library</a>
      <a href="#/about.ejs">about</a>
    </div>
  </div>

  <!-- Main Album View -->
  <main class="album-view">
    <div class="album-view-wrapper">

      <!-- Album of the Day -->
      <a href="/album/<%= album.id %>" style="text-decoration: none; color: inherit;">
        <div class="album-box">
          <h2>Album of the Day</h2>
          <div class="album-content">
            <img src="<%= album.images[0] ? album.images[0].url : '' %>" alt="Album Cover" class="album-img" />
            <div class="album-info">
              <strong>
                <%= album.name %>
              </strong><br />
              by <%= album.artists[0].name %><br />
                <small>Released on <%= album.release_date %></small>
            </div>
          </div>
        </div>
      </a>

      <!-- Random Album Section -->
      <div class="album-section">
        <div class="album-box">
          <h2>Random Album</h2>
          <div class="album-content">
            <a href="/album/<%= randomAlbum.id %>">
              <img src="<%= randomAlbum.images[0] ? randomAlbum.images[0].url : '' %>" alt="Album Cover"
                class="album-img" />
            </a>
            <div class="album-info">
              <strong>
                <%= randomAlbum.name %>
              </strong><br />
              by <%= randomAlbum.artists[0].name %><br />
                <small>Released on <%= randomAlbum.release_date %></small>
            </div>
          </div>
                  <!-- Generate Button -->
                  <form action="/home" method="GET">
                    <button type="submit" class="generate-btn">
                      generate new random album
                    </button>
                  </form>
        </div>
      </div>

    </div>
  </main>

</div>

  <script>
    const faders = document.querySelectorAll('.fade-in');
    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    faders.forEach(fader => {
      observer.observe(fader);
    });
  </script>
</body>

</html>